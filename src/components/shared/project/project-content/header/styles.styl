@import "~config/styles"

.component.header
  height 400vh
  width 100%

  .col
    position absolute
    top 0
    display flex
    align-items center
    height 100%

  .mask
    z-index 10
    position absolute
    display flex
    align-items center
    top 0
    right 0
    width 100%
    height 100vh
    overflow hidden

  .wrapper
    z-index 0
    position absolute
    top 0
    left 0
    height 100vh
    width 100%
    padding-left 40px
    display flex
    flex-direction column
    justify-content center

    +break(xl)
      padding-left 90px

    .project-name
      display flex
      align-items flex-end
      margin-left 190px
      margin-bottom 12px
      project-title-name()
      text-transform uppercase

      +break(xs)
        margin-left 0

      .project-number
        position relative
        bottom 1px
        margin-right 6px
        project-title-number()

    .title
      project-title()
      color white

      span
        display block
