@import "~config/styles"

.component.video-player-fullscreen
  z-index 1
  position absolute
  width 100vw
  height 100%
  visibility hidden
  opacity 0
  background-color black

  video
    position fixed
    top 50%
    left 50%
    width 100%
    height auto
    z-index 0
    transform translateX(-50%) translateY(-50%)
    background-size cover

  .gradient
    z-index 5
    position absolute
    bottom 0
    left 0
    width 100%
    height 9%
    background -moz-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(0,0,0,.4) 100%)
    background -webkit-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,.4) 100%)
    background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,.4) 100%)

  .progress-bar-wrapper
    z-index 10
    position absolute
    left 4%
    bottom 4%
    width 92%
    height 4px
    background rgba(255,255,255, .35)
    cursor pointer

    +break(xs)
      display none

    .progress-bar
      position absolute
      top 0
      left 0
      width 0%
      height 100%
      background #282727
