@import "~config/styles"

.component.scroll-indicator
  z-index 80
  position absolute
  top 0
  left 0
  height 100%
  width 4px
  background transparent

  +break(xs)
    width 30px

  .scroll-bar
    z-index 1
    position absolute
    top 0
    left 0
    width 100%
    height 0%
    background black

  .mobile-bar
    z-index 0
    position absolute
    top 0
    left 0
    width 0%
    height 100%
    background #666666
