@import "~config/styles"

.component.nav
  z-index 400
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display none

  .close
    z-index 10
    position absolute
    top 50%
    left 40px
    width 50px
    height 50px
    transform translateY(-50%)
    cursor pointer
    opacity 0
    overflow hidden

    +break(xs)
      left 10px

    .line
      position absolute
      top 50%
      left 50%
      height 2px
      width 26px
      transform-origin center center
      overflow hidden

      +break(xl)
        width 32px

      .border
        position absolute
        width 100%
        height 100%
        background white

      &.left
        transform translate(-50%, -50%) rotate(-45deg)

      &.right
        transform translate(-50%, -50%) rotate(45deg)

  .layer
    z-index 20
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background black

  .link-wrapper
    z-index 5
    display flex
    align-items center
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    pointer-events none

    .link-list
      padding-left 25%

      li
        position relative
        padding 30px 0
        cursor pointer
        nav-link()

        @media screen and (max-height: 640px)
          padding 20px 0


        +break(xl)
          padding 36px 0

        +break(xs)
          padding 20px 0

        .link-line
          position absolute
          top 50%
          left -16px
          height 2px
          width 0
          background white
          transform translateX(-100%) translateY(-100%)

          +break(xl)
            left -32px

        .number
          margin-right 8px
          nav-link-number()

          +break(xl)
            margin-right 14px
