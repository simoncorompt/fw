@import "~config/styles"

.component.lazyload-wrapper
  position absolute
  width 100%
  height 100%
  perspective 400px
  overflow hidden

  .img
    z-index 1
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  .load-layer
    z-index 10
    transform translateZ(400px)
    position absolute
    top -0.5%
    left 0
    width 100%
    height 101%
    background pink
