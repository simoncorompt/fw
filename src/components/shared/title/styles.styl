@import "~config/styles"

.component.about-menu
  z-index 120
  display flex
  flex-direction row
  align-items center
  position absolute
  top 50%
  left 50px
  transform-origin top left
  transform rotate(-90deg) translateX(-50%) translateY(30%)

  @media screen and (max-height: 780px)
    top auto
    bottom 90px

  @media screen and (max-height: 360px)
    top auto
    bottom 26px

  &.dark
    .about-link, .project-number
      color $text


  +break(xs)
    left 5px

  +break(xl)
    left 52px

  .project-number
    margin-right 6px
    menu-link()
    transition color 400ms ease-in-out

  .about-link
    position relative
    menu-link()
    cursor pointer
    text-decoration none
    overflow hidden
    transition color 400ms ease-in-out

    &-content
      display flex
      flex-direction column
      justify-content flex-start
      align-items center

      .close
        position absolute
        top 100%
