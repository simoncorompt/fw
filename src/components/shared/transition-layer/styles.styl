@import "~config/styles"

.component.transition-layer
  z-index 150
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  pointer-events none

  .layer
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    pointer-events auto

    .wrapper-quote
      display flex
      flex-direction row
      align-items center
      justify-content center
      box-sizing border-box
      position absolute
      top 0
      left 0
      width 100%
      height 100%

      .line-wrapper
        position relative
        display block
        height 2px
        width 80%
        overflow hidden

      .line
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background white


      .quote
        color white

        +break(xs)
          font-size rem(40px)
          max-width 70%
