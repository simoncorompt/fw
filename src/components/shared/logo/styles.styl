@import "~config/styles"

.component.logo
  z-index 120
  display flex
  flex-direction row
  align-items center
  position absolute
  top 50px
  left 50px
  transform-origin top left
  transform rotate(-90deg) translateX(-100%)
  cursor pointer

  +break(xs)
    top 10px
    left 7px

  .button
    position relative
    width 30px
    height 24px
    margin-right 40px

    @media screen and (max-height: 360px)
      margin-right 20px

    +break(xs)
      height 16px

    +break(xl)
      height 30px
      margin-right 70px

    .burger
      position absolute
      top 3px
      left 3px
      width 24px
      height 18px
      transform-origin center center
      transform rotate(90deg)
      overflow hidden

      +break(xs)
        top -1px
        left 6px
        width 16px

      +break(xl)
        top 6px
        left 0
        width 30px
        height 22px

      .line
        position absolute
        top 8px
        left 0
        height 2px
        width 24px
        background white
        transform translateX(0)

        +break(xs)
          top 8px
          width 16px

        +break(xl)
          top 10px
          width 30px

        &.top
          top 0
          width 14px

          +break(xs)
            width 10px

          +break(xl)
            width 19px

        &.bottom
          top 16px
          width 18px

          +break(xs)
            width 13px

          +break(xl)
            top 20px
            width 25px

  .logo-wrapper
    display flex
    align-items center
    justify-content center
    position relative
    width 188px
    height 24px

    +break(xs)
      width 120px
      height 16px

    +break(xl)
      width 230px
      height 30px

    .logo
      display block
      position relative
      width 188px
      height auto

      +break(xs)
        width 120px

      +break(xl)
        width 230px
